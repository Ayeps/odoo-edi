<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

        <record id="view_order_form" model="ir.ui.view">
            <field name="name">sale.order.form.gs1</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <page string="Other Information" position="after">
                        <page string="GS1 Information" groups="base.group_user">
                            <group>
                                <group name="UNB" groups="base.group_user">
                                    <field name="unb_sender"/>
                                    <field name="unb_recipient"/>
                                </group>
                                <group name="UNH/NAD">
                                    <field name="nad_by"/>
                                    <field name="nad_su"/>
                                    <field name="nad_sn"/>
                                    <field name="nad_cn"/>
                                    <field name="nad_dp"/>
                                    <field name="dtm_delivery"/>
                                </group>
                            </group>
                        </page>
                </page>
            </field>
        </record>

        <record id="view_order_form_inherit" model="ir.ui.view">
            <field name="name">sale.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <tree string="Sales Order Lines" position="attributes">
                    <attribute name="colors">red: is_available == 'false'</attribute>
                </tree>
                 <tree string="Sales Order Lines" position="inside">
                    <field name="is_available" invisible="1"/>
                </tree>
            </field>
        </record>

  </data>
</openerp>
