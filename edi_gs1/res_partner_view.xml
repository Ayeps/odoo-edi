<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <record id="view_partner_form" model="ir.ui.view">
      <field name="name">res.partner.gs1</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form" />
      <field name="arch" type="xml">
        <field name="website" position="after">
          <field name="gs1_gln" />
          <field name="customer_no" />
          <field name="role" />
          <field name="store_class" />
          <field name="areg" />
        </field>
        <field name="title" position="after">
          <field name="size" />
          <field name="fsg_paolos" />
          <field name="fsg_leroy" />
        </field>
      </field>
    </record>
    <record id="view_partner_tree" model="ir.ui.view">
      <field name="name">res.partner.tree.gs1</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_tree" />
      <field name="arch" type="xml">
        <field name="phone" position="before">
          <field name="role" />
          <field name="category_id" />
          <field name="store_class" />
          <field name="size" />
          <field name="areg" />
        </field>
      </field>
    </record>
    <record id="view_res_partner_filter" model="ir.ui.view">
      <field name="name">res.partner.select.gs1</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_res_partner_filter" />
      <field name="arch" type="xml">
        <field name="parent_id" position="after">
          <field name="role" /> <!-- move to crm_paolos -->
          <field name="areg" /> <!-- move to crm_paolos -->
          <field name="gs1_gln" />
          <field name="city" />
          <field name="zip" />
          <field name="store_class" /> <!-- move to crm_paolos -->
        </field>
        <filter string="Country" position="after">
          <filter string="Role" context="{'group_by': 'role'}" /> <!-- move to crm_paolos -->
          <filter string="Areg" context="{'group_by': 'areg'}" /> <!-- move to crm_paolos -->
          <filter string="Store Class" context="{'group_by': 'store_class'}" /> <!-- move to crm_paolos -->
        </filter>
      </field>
    </record>
    <!--
         <record id="res_partner_opt_out_search_inherit" model="ir.ui.view">
         <field name="name">res.partner.opt_out.search</field>
         <field name="model">res.partner</field>
         <field name="inherit_id" ref="email_template.res_partner_opt_out_search_" />
         <field name="arch" type="xml">
         <filter name="not_opt_out" position="replace">
         <filter string="OPT IN" name='not_opt_out' domain="[('opt_out', '=', False)]" help="Partners that did not ask not to be included in mass mailing campaigns" />
         </filter>
         </field>
         </record>
    -->
  </data>
</openerp>
