<?xml version="1.0"?>
<openerp>
    <data>


    <!-- EDI Route Form View -->
    
    <record model="ir.ui.view" id="view_edi_route_form">
        <field name="name">EDI Route</field>
        <field name="model">edi.route</field>
      <field name="inherit_id" ref="edi_route.view_edi_route_form" />
        <field name="arch" type="xml">
            <group name="route_type" position="inside">
                <field name="ftp_host"    attrs="{'invisible': [('route_type','not in',['ftp','sftp'])], 'required': [('route_type','in',['ftp','sftp'])]}"/>
                <field name="ftp_user"    attrs="{'invisible': [('route_type','not in',['ftp','sftp'])], 'required': [('route_type','in',['ftp','sftp'])]}"/>
                <field name="ftp_password" attrs="{'invisible': [('route_type','not in',['ftp','sftp'])], 'required': [('route_type','in',['ftp','sftp'])]}" />
                <field name="ftp_directory" attrs="{'invisible': [('route_type','not in',['ftp','sftp'])]}" />
                <field name="ftp_pattern" attrs="{'invisible': [('route_type','not in',['ftp','sftp'])]}"/>
                <field name="ftp_debug" attrs="{'invisible': [('route_type','not in',['ftp','sftp'])]}"/>
            </group>
        </field>
    </record>
    

       
    
    </data>
</openerp>
